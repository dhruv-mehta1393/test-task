<div class="container">
  <div class="post-comments">

    <%= form_for [@discussion, Comment.new] do |f| %>
        <div class="form-group">
            <%= f.text_area :title, class: "form-control", placeholder: "Add a comment" %>
        </div>
        <%= f.submit class: "btn btn-primary" %>
    <% end %>
  </div>
